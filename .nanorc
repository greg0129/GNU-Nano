# -------------------------------------------------- SINGLE BINDINGS --------------------------------------------------

bind ^H "{chopwordleft}"		all
bind ^K "{cut}"					all
bind ^U "{paste}"				all
bind ^W "{whereis}"				all
bind ^\ "{replace}"				main
bind ^/ "{gotoline}"			main
bind ^L "{linenumbers}"			main
bind ^R "{insert}"				main
bind ^S "{savefile}"			main
bind ^T "{execute}"				main
bind ^X "{exit}"				main
bind ^Z "{suspend}"				main

bind M-] "{findbracket}"		all
bind M-; "{runmacro}"			all
bind M-: "{recordmacro}"		all
