bind M-P "{whitespacedisplay}"	main

# -------------------------------------------------- COMBO BINDINGS --------------------------------------------------

bind ^D "{up}{copy}{paste}"					main	# (D)uplicate the line above
bind ^O "{insert}{flipnewbuffer}{browser}"	main	# (O)pen file in new buffer

# -------------------------------------------------- EXPERIMENTAL BINDINGS --------------------------------------------------

bind M-C "{execute}make >> /dev/null && ./$FILENAME >> /dev/null {enter}" main
bind M-G "{execute}pdflatex "$FILENAME.tex" >> /dev/null && rm "$FILENAME.aux" "$FILENAME.log" && evince "$FILENAME.pdf" >> /dev/null {enter}" main
bind M-S "{execute}~/Documents/Scripts/Generic_Scripts/wofi_select_symbol.sh{enter}" main

